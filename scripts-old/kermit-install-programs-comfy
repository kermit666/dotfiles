#!/bin/bash

# install stuff that I use very often

apt-get install -y audacity aptitude build-essential bzr-explorer gimp guake inkscape mypaint subdownloader ubuntu-restricted-extras vlc vlc-plugin-pulse xclip x2goclient

# tuxguitar
apt-get install -y tuxguitar timidity-interfaces-extra tuxguitar-alsa tuxguitar-oss tuxguitar-jsa

add-apt-repository -y ppa:me-davidsansome/clementine-dev

# until the main ppa gets fixed (ppa:synapse-core/ppa)
sudo add-apt-repository -y ppa:synapse-core/testing

apt-get update

apt-get install -y clementine synapse

exit
